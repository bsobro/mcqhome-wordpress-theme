{
  "name": "mcqhome-theme",
  "version": "1.0.0",
  "description": "A comprehensive WordPress theme for MCQ-based educational platform",
  "main": "index.js",
  "scripts": {
    "dev": "tailwindcss -i ./src/css/main.css -o ./assets/css/main.css --watch",
    "build": "tailwindcss -i ./src/css/main.css -o ./assets/css/main.css --minify",
    "build-js": "webpack --mode=production",
    "dev-js": "webpack --mode=development --watch"
  },
  "keywords": [
    "wordpress",
    "theme",
    "mcq",
    "education",
    "tailwindcss"
  ],
  "author": "MCQHome Team",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "tailwindcss": "^3.4.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "alpinejs": "^3.13.3"
  }
}